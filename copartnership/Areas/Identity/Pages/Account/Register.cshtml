@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container IndexDiv">
    <div class="row">
    <div class="col-3 container CenteredContainer text-center">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h5>تسجيل جديد</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Input.FirstName" class="form-control" placeholder="الاسم الاول"  maxlength="100" />
            </div>
            <div class="form-group">

                <input asp-for="Input.LastName" class="form-control" placeholder="الاسم الثاني"  maxlength="100" />
            </div>
            <div class="form-group">

                <input asp-for="Input.Email" class="form-control" placeholder="الايميل"   />
            </div>
            <div class="form-group">

                <input asp-for="Input.Password" class="form-control" placeholder="كلمة السر" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-group">

                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="تأكيد كلمة السر" autocomplete="new-password" aria-required="true" />
            </div>
            <input id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-danger" value="تسجيل">
            </form>
    </div>

</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
