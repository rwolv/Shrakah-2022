@model IEnumerable<UserViewModel>

    @{
        ViewData["Title"] = "Users";
    }

    <h1>المستخدمين</h1>
<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white"> 
            <th>Firs tName</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Roles"asp-action="Index">ادارةالصلاحيات</a>
                </td>
            </tr>
        }
    </tbody>
</table>