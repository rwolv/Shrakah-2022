<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] شراكة</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/copartnership.styles.css" asp-append-version="true" />
</head>
@{
    string menuTextColor = "text-white";
}
<body>
    <div class="container-fluid " style="background:linear-gradient(to left, #28347d, #19767D)">
            <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm   box-shadow mb-3">
            <div class="container-fluid">
                <a id="icon" class="navbar-brand @menuTextColor" asp-area="" asp-controller="Home" asp-action="Index">شراكة</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @menuTextColor" asp-area="" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @menuTextColor" asp-area="" asp-controller="ParnerForms" asp-action="Create">إنشاء شراكة</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @menuTextColor" asp-area="" asp-controller="ParnerForms" asp-action="ShowPartner">شراكاتي </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @menuTextColor" asp-area="" asp-controller="Roles" asp-action="Index">ادارة الصلاحيات </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @menuTextColor" asp-area="" asp-controller="Users" asp-action="Index">ادارة المستخدمين </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @menuTextColor" asp-area="" asp-controller="Home" asp-action="Privacy">سياسة الخصوصية</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    </div>
    <div class="container @menuTextColor">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted" style="background:linear-gradient(to left, #28347d, #19767D)">
        <div class="container">
            &copy; 2022 - شراكة - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="@menuTextColor text-decoration-none">سياسة الخصوصية</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
